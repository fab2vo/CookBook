<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_list</item>
        <item name="android:itemBackground">@color/bg_list2</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
        <!--item name="android:dividerHeight">1dp</item-->
        <!--item name="android:dropDownListViewStyle">@style/MyDropDownListView</item-->
    </style>

<!-- Menu -->
    <style name="MyToobarSubtitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textSize">5dp</item> <!-- Ne marche pas -->
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- fonctionne mais donne un sÃ©parateur pour chaque ligne
    <style name="MyDropDownListView" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/fg_title</item>
    </style> -->

<!-- Mettre aussi TitleEnterField -->
    <style name="EnterValueField">
        <item name="android:background">@color/bg_enter_val</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CookBookText">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CookBookText.Spinner">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/bg_enter_val</item>
    </style>
    <style name="CookBookText.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fg_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">casual</item>
    </style>
    <style name="CookBookText.SubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fg_icon</item>
    </style>
    <style name="CookBookText.ComTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fg_icon</item>
    </style>
    <style name="CookBookText.Small">
        <item name="android:textSize">11sp</item>
    </style>
    <style name="CookBookText.UltraSmall">
        <item name="android:textSize">9sp</item>
    </style>
    <style name="CookBookText.EnterTitle">
        <item name="android:textColor">@color/fg_icon</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">casual</item>
    </style>
    <style name="RatingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ButtonCookBook" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/button_splash</item>
        <item name="android:textColorPrimary">@color/button_splash_color</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
