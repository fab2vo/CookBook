<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splash_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        tools:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/splash_moto"
        style="@style/CookBookText.SubTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        tools:text="@string/splash_moto_txt" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/splash_progBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="50.0dip"
            android:layout_marginTop="4dp"
            android:layout_marginRight="50.0dip"
            android:layout_marginBottom="10dp"
            android:focusable="false"
            android:maxHeight="20dip"
            android:minHeight="20dip"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:progressTint="@color/fg_icon" />
        <ImageView
            android:id="@+id/net_anim"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_wifi_0" />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/splash_edit_family_lbl"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/splash_edit_family_label" />
                <EditText
                    android:id="@+id/splash_edit_family"
                    style="@style/EnterValueField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:inputType="text"
                    android:text="@string/splash_edit_family_hint" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/splash_edit_member_lbl"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/splash_edit_member_label" />
                <EditText
                    android:id="@+id/splash_edit_member"
                    style="@style/EnterValueField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:inputType="text"
                    android:text="@string/splash_edit_member_hint" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/splash_edit_pwd_lbl"
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/splash_edit_pwd_label" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                <EditText
                    android:id="@+id/splash_edit_pwd"
                    style="@style/EnterValueField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:inputType="textPassword"
                    android:text="@string/splash_edit_pwd_hint" />
                <ImageView
                    android:id="@+id/show_pass_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="24dp"
                    android:alpha=".5"
                    android:onClick="ShowHidePass"
                    android:src="@drawable/ic_pwd_vis" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/splash_edit_message"
                android:layout_width="match_parent"
                style="@style/CookBookText"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_height="60dp" />

                <Button
                    android:id="@+id/splash_button_family"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/ButtonCookBook"
                    tools:text="@string/splash_button_family_txt"/>

                <Button
                    android:id="@+id/splash_button_member"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/ButtonCookBook"
                    tools:text="@string/splash_button_member_txt"/>

                <Button
                    android:id="@+id/splash_button_session"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/ButtonCookBook"
                    tools:text="@string/splash_button_session_txt"/>


        </LinearLayout>
</LinearLayout>
